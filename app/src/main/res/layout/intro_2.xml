<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/image_intro_2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:contentDescription="@string/image_intro_2"
        app:srcCompat="@drawable/quatro" />

    <TextView
        android:id="@+id/txt_intro_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_branco"
        android:layout_marginTop="15dp"
        android:text="@string/info_intro_2"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_description_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_margin="16dp"
        android:text="@string/info_description_2"
        android:textAlignment="center" />
</LinearLayout>